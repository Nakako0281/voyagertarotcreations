        <div
            class="w-32 h-32 bg-gray-200 rounded-full mx-auto mb-4 overflow-hidden relative group shadow-crystal border-4 border-white"
        >
            <img
                src="/images/sakura_aoki.webp"
                alt="Sakura Aoki"
                class="w-full h-full object-cover"
            />
            <div
                class="absolute inset-0 bg-black/10 flex items-center justify-center text-white text-xs opacity-0 group-hover:opacity-100 transition-opacity"
