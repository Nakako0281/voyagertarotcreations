<header
    id="main-header"
    class="w-full fixed top-0 left-0 z-50 transition-all duration-500 text-white"
>
    <div class="container mx-auto px-6 py-4 flex items-center justify-between">
        <a
            href="/"
            class="flex flex-col items-start font-mincho hover:opacity-80 transition-opacity"
        >
            <span class="text-xl font-bold tracking-wider leading-none"
                >Voyager Tarot</span
            >
            <span
                class="text-[0.6rem] font-bold tracking-[0.3em] uppercase opacity-80 leading-none mt-1 ml-0.5"
                >Creations</span
            >
        </a>

        <!-- Desktop Navigation -->
        <nav
            class="hidden md:flex items-center gap-8 font-mincho tracking-widest"
        >
            <a
                href="/"
                class="text-sm font-bold opacity-90 hover:opacity-100 hover:text-sakura-vivid transition-colors relative group"
            >
                HOME
                <span
                    class="absolute -bottom-1 left-0 w-0 h-0.5 bg-sakura-vivid transition-all group-hover:w-full"
                ></span>
            </a>
            <a
                href="/profile"
                class="text-sm font-bold opacity-90 hover:opacity-100 hover:text-sakura-vivid transition-colors relative group"
            >
                PROFILE
                <span
                    class="absolute -bottom-1 left-0 w-0 h-0.5 bg-sakura-vivid transition-all group-hover:w-full"
                ></span>
            </a>
            <a
                href="/course"
                class="text-sm font-bold opacity-90 hover:opacity-100 hover:text-sakura-vivid transition-colors relative group"
            >
                COURSE
                <span
                    class="absolute -bottom-1 left-0 w-0 h-0.5 bg-sakura-vivid transition-all group-hover:w-full"
                ></span>
            </a>
            <a
                href="/news"
                class="text-sm font-bold opacity-90 hover:opacity-100 hover:text-sakura-vivid transition-colors relative group"
            >
                NEWS
                <span
                    class="absolute -bottom-1 left-0 w-0 h-0.5 bg-sakura-vivid transition-all group-hover:w-full"
                ></span>
            </a>
            <a
                href="/contact"
                class="px-6 py-2 rounded-full border border-white/40 hover:bg-white hover:text-tarot-blue hover:border-transparent transition-all text-sm font-bold tracking-wide"
            >
                CONTACT
            </a>
        </nav>

        <!-- Mobile Menu Button -->
        <button
            id="menu-btn"
            class="md:hidden p-2 space-y-1.5 focus:outline-none z-50 relative group"
        >
            <span
                class="block w-6 h-0.5 bg-current transition-transform origin-center group-[.active]:rotate-45 group-[.active]:translate-y-2"
            ></span>
            <span
                class="block w-6 h-0.5 bg-current transition-opacity group-[.active]:opacity-0"
            ></span>
            <span
                class="block w-6 h-0.5 bg-current transition-transform origin-center group-[.active]:-rotate-45 group-[.active]:-translate-y-2"
            ></span>
        </button>
    </div>

    <!-- Mobile Menu Overlay -->
    <nav
        id="mobile-menu"
        class="fixed inset-0 bg-white/95 backdrop-blur-xl z-40 flex flex-col items-center justify-center gap-8 opacity-0 pointer-events-none transition-opacity duration-300 text-tarot-blue"
    >
        <a
            href="/"
            class="text-2xl font-mincho font-bold hover:text-sakura-vivid transition-colors"
            >HOME</a
        >
        <a
            href="/profile"
            class="text-2xl font-mincho font-bold hover:text-sakura-vivid transition-colors"
            >PROFILE</a
        >
        <a
            href="/course"
            class="text-2xl font-mincho font-bold hover:text-sakura-vivid transition-colors"
            >COURSE</a
        >
        <a
            href="/news"
            class="text-2xl font-mincho font-bold hover:text-sakura-vivid transition-colors"
            >NEWS</a
        >
        <a
            href="/contact"
            class="text-2xl font-mincho font-bold text-sakura-vivid hover:text-pink-600 transition-colors"
            >CONTACT</a
        >
    </nav>
</header>

<script>
    const header = document.getElementById("main-header");
    // const logo = document.getElementById("header-logo") as HTMLImageElement; // Replaced with text, no longer needed
    const menuBtn = document.getElementById("menu-btn");
    const mobileMenu = document.getElementById("mobile-menu");

    // Scroll Effect
    window.addEventListener("scroll", () => {
        if (window.scrollY > 50) {
            header?.classList.add(
                "bg-white/90",
                "backdrop-blur-md",
                "shadow-sm",
                "py-2",
                "text-tarot-blue",
            );
            header?.classList.remove("text-white", "py-4");

            // Allow logo swapping if attributes exist
            // if(logo && logo.dataset.logoColor) logo.src = logo.dataset.logoColor;
        } else {
            header?.classList.remove(
                "bg-white/90",
                "backdrop-blur-md",
                "shadow-sm",
                "py-2",
                "text-tarot-blue",
            );
            header?.classList.add("text-white", "py-4");

            // if(logo && logo.dataset.logoWhite) logo.src = logo.dataset.logoWhite;
            // fallback: if no white logo, we might just keep the color one or handle it with CSS filter
        }
    });

    // Mobile Menu
    menuBtn?.addEventListener("click", () => {
        menuBtn.classList.toggle("active");

        // Toggle header text color for visibility on white menu
        if (menuBtn.classList.contains("active")) {
            header?.classList.remove("text-white");
            header?.classList.add("text-gray-800");
        } else if (window.scrollY <= 50) {
            header?.classList.add("text-white");
            header?.classList.remove("text-gray-800");
        }

        if (mobileMenu?.classList.contains("opacity-0")) {
            mobileMenu.classList.remove("opacity-0", "pointer-events-none");
            document.body.style.overflow = "hidden";
        } else {
            mobileMenu?.classList.add("opacity-0", "pointer-events-none");
            document.body.style.overflow = "";
        }
    });

    mobileMenu?.querySelectorAll("a").forEach((link) => {
        link.addEventListener("click", () => {
            menuBtn?.classList.remove("active");
            mobileMenu?.classList.add("opacity-0", "pointer-events-none");
            document.body.style.overflow = "";
            if (window.scrollY <= 50) {
                header?.classList.add("text-white");
                header?.classList.remove("text-gray-800");
            }
        });
    });
</script>
