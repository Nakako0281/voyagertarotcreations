---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Sidebar from "../components/Sidebar.astro";
import Footer from "../components/Footer.astro";

interface Props {
	title: string;
	wide?: boolean; // New prop to enable full-width mode (no sidebar)
	isHome?: boolean; // Smart Header Logic
}

const { title, wide = false, isHome = false } = Astro.props;
---

<!doctype html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Voyager Tarot Creations" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} | Voyager Tarot Creations</title>
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Zen+Maru+Gothic:wght@400;700;900&display=swap"
			rel="stylesheet"
		/>
		<link
			rel="stylesheet"
			href="https://fonts.googleapis.com/earlyaccess/hannarimincho.css"
		/>
	</head>
	<body
		class="bg-bg-base text-text-main min-h-screen flex flex-col relative overflow-x-clip selection:bg-sakura-vivid selection:text-white"
	>
		<!-- Vivid Blobs (Restored for Crystal Depth - Colorful & Happy) -->
		<div class="fixed inset-0 pointer-events-none z-0 overflow-hidden">
			<div
				class="absolute top-[-10%] left-[-10%] w-[70%] h-[70%] bg-gradient-to-br from-sakura-vivid/20 to-transparent blur-[120px] rounded-full mix-blend-multiply opacity-70 animate-pulse-slow"
			>
			</div>
			<div
				class="absolute bottom-[-10%] right-[-10%] w-[60%] h-[60%] bg-gradient-to-tl from-sunshine/25 to-transparent blur-[130px] rounded-full mix-blend-multiply opacity-70"
			>
			</div>
			<div
				class="absolute top-[20%] right-[10%] w-[50%] h-[50%] bg-gradient-to-b from-sky/20 to-transparent blur-[100px] rounded-full mix-blend-multiply opacity-60"
			>
			</div>
		</div>

		<Header isHome={isHome} />

		<div class="flex flex-1 relative flex-col md:flex-row">
			<main
				class:list={[
					"flex-1 w-full mx-auto",
					wide ? "p-0 max-w-none" : "p-4 md:p-8 max-w-5xl",
				]}
			>
				{/* Spacer for Fixed Header on Subpages */}
				{
					!isHome && !wide && (
						<div class="w-full h-20 md:h-24 pointer-events-none" />
					)
				}
				<slot />
			</main>

			{
				!wide && (
					<aside class="hidden md:block w-[300px] sticky top-20 h-[calc(100vh-5rem)] bg-white/90 backdrop-blur-md border-l border-gray-100 p-6 z-30 shadow-sm overflow-y-auto">
						<Sidebar />
					</aside>
				)
			}
		</div>

		<Footer />
	</body>
</html>
