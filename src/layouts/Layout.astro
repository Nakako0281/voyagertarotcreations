---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Sidebar from '../components/Sidebar.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Voyager Tarot Creations" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} | Voyager Tarot Creations</title>
	</head>
	<body class="bg-off-white text-dark-gray min-h-screen flex flex-col font-sans">
		<Header />
        
        <div class="flex flex-1 relative flex-col md:flex-row">
            <main class="flex-1 w-full max-w-5xl mx-auto p-4 md:p-8 md:pr-[320px]"> <!-- Padding right to accommodate fixed sidebar -->
                <slot />
            </main>

            <aside class="hidden md:block w-[300px] fixed right-0 top-0 h-full bg-white/90 backdrop-blur-md border-l border-gray-100 p-6 z-40 shadow-sm overflow-y-auto">
                <Sidebar />
            </aside>
        </div>

		<Footer />
	</body>
</html>
