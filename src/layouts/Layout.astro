---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Sidebar from "../components/Sidebar.astro";
import Footer from "../components/Footer.astro";

interface Props {
	title: string;
	wide?: boolean; // New prop to enable full-width mode (no sidebar)
}

const { title, wide = false } = Astro.props;
---

<!doctype html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Voyager Tarot Creations" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} | Voyager Tarot Creations</title>
	</head>
	<body
		class="bg-bg-base text-text-main min-h-screen flex flex-col font-sans relative overflow-x-clip selection:bg-sakura-vivid selection:text-white"
	>
		<div class="fixed inset-0 pointer-events-none z-[-1]">
			<!-- Vivid Blobs -->
			<div
				class="absolute top-[-10%] left-[-10%] w-[60%] h-[60%] bg-gradient-to-br from-sakura-light/40 to-transparent blur-[100px] rounded-full mix-blend-multiply animate-pulse-slow"
			>
			</div>
			<div
				class="absolute bottom-[-10%] right-[-10%] w-[50%] h-[60%] bg-gradient-to-tl from-gold-light/60 to-transparent blur-[120px] rounded-full mix-blend-multiply"
			>
			</div>
			<div
				class="absolute top-[30%] right-[10%] w-[40%] h-[40%] bg-gradient-to-b from-blue-100/40 to-transparent blur-[90px] rounded-full mix-blend-multiply"
			>
			</div>
		</div>

		<Header />

		<div class="flex flex-1 relative flex-col md:flex-row">
			<main
				class:list={[
					"flex-1 w-full mx-auto",
					wide
						? "p-0 max-w-none"
						: "p-4 md:p-8 max-w-5xl md:pr-[320px]",
				]}
			>
				<slot />
			</main>

			{
				!wide && (
					<aside class="hidden md:block w-[300px] fixed right-0 top-0 h-full bg-white/90 backdrop-blur-md border-l border-gray-100 p-6 z-40 shadow-sm overflow-y-auto">
						<Sidebar />
					</aside>
				)
			}
		</div>

		<Footer />
	</body>
</html>
