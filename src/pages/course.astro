---
import Layout from '../layouts/Layout.astro';

const courses = [
    {
        id: "leader",
        title: "認定リーダー養成講座",
        subtitle: "基礎を学び、自分と他者をリーディングできるようになる",
        price: "¥55,000",
        duration: "全12時間 (2日間)",
        description: "ボイジャータロットの78枚のカードの意味を学び、基本的なリーディングスキルを習得します。修了後は、有料でのセッションが可能になります。",
        features: ["カードの基礎知識", "直感の磨き方", "基本スプレッド", "有料セッションの始め方"],
        color: "bg-blue-50 border-blue-200"
    },
    {
        id: "coach",
        title: "認定コーチ養成講座",
        subtitle: "質問力を磨き、行動を促すコーチングスキルを習得",
        price: "¥88,000",
        duration: "全20時間 (3〜4日間)",
        description: "タロットを使ったコーチング手法を学びます。クライアントのゴール達成をサポートするための「質問力」と「行動計画」の立て方をマスターします。",
        features: ["コーチング基礎", "深層心理へのアプローチ", "アクションプラン作成", "継続セッションの技術"],
        color: "bg-pink-50 border-pink-200"
    },
    {
        id: "teacher",
        title: "認定ティーチャー養成講座",
        subtitle: "ボイジャータロットを教え、広める存在になる",
        price: "¥120,000",
        duration: "要問い合わせ",
        description: "リーダー講座を開催するためのインストラクション技術を学びます。ボイジャータロットの魅力を伝え、次世代のリーダーを育成する指導者を目指します。",
        features: ["講座カリキュラムの作り方", "ティーチングスキル", "集客とブランディング", "コミュニティ運営"],
        color: "bg-yellow-50 border-yellow-200"
    }
];
---

<Layout title="Course Guide">
    <div class="space-y-16">
        <!-- Header -->
        <header class="text-center mb-12">
            <h1 class="text-3xl md:text-4xl font-mincho text-tarot-blue mb-4">Course Guide</h1>
            <p class="text-gray-500">講座案内</p>
            <p class="mt-4 max-w-2xl mx-auto text-gray-700">
                Voyager Tarot Creationsでは、段階に合わせて学べる認定講座を用意しています。<br/>
                趣味で楽しみたい方から、プロとして活動したい方まで。
            </p>
        </header>

        <!-- Course List -->
        <div class="grid gap-10">
            {courses.map(course => (
                <section id={course.id} class={`p-8 md:p-10 rounded-3xl border ${course.color} shadow-sm relative overflow-hidden`}>
                    <div class="relative z-10">
                        <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-6">
                            <div>
                                <h2 class="text-2xl md:text-3xl font-mincho font-bold text-gray-800 mb-2">{course.title}</h2>
                                <p class="text-gray-600 font-bold">{course.subtitle}</p>
                            </div>
                            <div class="mt-4 md:mt-0 text-right">
                                <p class="text-3xl font-bold text-tarot-blue">{course.price}<span class="text-sm font-normal text-gray-500 ml-1">(税込)</span></p>
                                <p class="text-sm text-gray-500">{course.duration}</p>
                            </div>
                        </div>

                        <p class="text-gray-700 leading-relaxed mb-8 border-t border-gray-200/50 pt-6">
                            {course.description}
                        </p>

                        <div class="bg-white/60 p-6 rounded-xl backdrop-blur-sm">
                            <h3 class="font-bold text-gray-700 mb-4 flex items-center">
                                <span class="w-2 h-2 bg-sakura-pink rounded-full mr-2"></span>
                                カリキュラムの特徴
                            </h3>
                            <ul class="grid md:grid-cols-2 gap-3">
                                {course.features.map(feature => (
                                    <li class="flex items-center text-gray-600 text-sm">
                                        <svg class="w-4 h-4 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                                        {feature}
                                    </li>
                                ))}
                            </ul>
                        </div>

                        <div class="mt-8 text-center md:text-left">
                            <a href="/contact" class="inline-block bg-white text-gray-800 border border-gray-300 px-8 py-3 rounded-full font-bold hover:bg-tarot-blue hover:text-white hover:border-tarot-blue transition-all">
                                お申し込み・お問い合わせ
                            </a>
                        </div>
                    </div>
                </section>
            ))}
        </div>

        <!-- Pricing Table Summary (Optional if lists above are detailed enough, but good for quick comparison) -->
        <section class="bg-white p-8 rounded-2xl border border-gray-200">
            <h2 class="text-2xl font-mincho text-center mb-8">価格一覧</h2>
            <div class="overflow-x-auto">
                <table class="w-full text-left border-collapse">
                    <thead>
                        <tr class="bg-gray-50 text-gray-600 text-sm">
                            <th class="p-4 rounded-tl-lg">講座名</th>
                            <th class="p-4">時間</th>
                            <th class="p-4 rounded-tr-lg text-right">受講料 (税込)</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-100">
                        {courses.map(course => (
                            <tr class="hover:bg-gray-50/50 transition-colors">
                                <td class="p-4 font-bold text-gray-800">{course.title}</td>
                                <td class="p-4 text-gray-600 text-sm">{course.duration}</td>
                                <td class="p-4 text-right font-mincho font-bold text-tarot-blue">{course.price}</td>
                            </tr>
                        ))}
                    </tbody>
                </table>
            </div>
        </section>
    </div>
</Layout>
