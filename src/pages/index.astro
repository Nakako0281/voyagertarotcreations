---
import Layout from "../layouts/Layout.astro";
import TarotDraw from "../components/react/TarotDraw.tsx";
import { getNews } from "../library/microcms";
import { format } from "date-fns";

const response = await getNews({
	limit: 3,
	fields: ["id", "title", "publishedAt", "category", "eyecatch"],
});
const { contents: newsList } = response;

function formatDate(dateString: string) {
	return format(new Date(dateString), "yyyy.MM.dd");
}
// const newsList: any[] = [];

// Course Data Definition for Scalability
const courseCategories = [
    {
        id: "tarot",
        name: "ボイジャータロット",
        description: "Voyager Tarot",
        steps: [
            { step: 1, label: "リーダー認定" },
            { step: 2, label: "コーチ認定" },
            { step: 3, label: "ティーチャー認定" }
        ],
        cards: [
            { title: "リーダー認定講座", img: "/images/top_2-1.jpg", url: "/course#course_1" },
            { title: "コーチ認定講座", img: "/images/top_2-2.jpg", url: "/course#course_2" },
            { title: "ティーチャー認定講座", img: "/images/top_2-3.jpg", url: "/course2#course_1" }
        ]
    },
    {
        id: "other",
        name: "（例）その他講座",
        description: "Other Courses",
        steps: [
            { step: 1, label: "入門" },
            { step: 2, label: "応用" },
            { step: 3, label: "マスター" }
        ],
        cards: [ // Using same images as placeholders for the example
            { title: "入門講座", img: "/images/top_2-1.jpg", url: "#" },
            { title: "応用講座", img: "/images/top_2-2.jpg", url: "#" },
            { title: "マスター講座", img: "/images/top_2-3.jpg", url: "#" }
        ]
    }
];
---

<Layout title="Home" wide={true}>
	<!-- Hero Section (Immersive Full Screen) -->
	<section
		class="relative h-screen w-full flex items-center justify-center overflow-hidden"
	>
		<!-- Background Image Slideshow -->
		<div class="absolute inset-0 z-0">
			<div
				class="absolute inset-0 bg-tarot-blue/30 z-10 pointer-events-none"
			>
			</div>
			<!-- Overlay -->

			<img
				src="/images/title_1.png"
				alt="Hero Background 1"
				class="absolute inset-0 w-full h-full object-cover transition-opacity duration-[2000ms] ease-in-out opacity-100 hero-bg"
				data-index="0"
			/>
			<img
				src="/images/title_2.png"
				alt="Hero Background 2"
				class="absolute inset-0 w-full h-full object-cover transition-opacity duration-[2000ms] ease-in-out opacity-0 hero-bg"
				data-index="1"
			/>
            <!-- Added 3rd Image from Mission Section -->
			<img
				src="/images/top_3_bottom_photos_item-2.jpg"
				alt="Hero Background 3"
				class="absolute inset-0 w-full h-full object-cover transition-opacity duration-[2000ms] ease-in-out opacity-0 hero-bg"
				data-index="2"
			/>
		</div>

		<script>
			// Crossfade for hero images (3 images)
            const heroBgs = document.querySelectorAll('.hero-bg');
            let currentIndex = 0;

            if (heroBgs.length > 0) {
                setInterval(() => {
                    const nextIndex = (currentIndex + 1) % heroBgs.length;
                    
                    heroBgs[currentIndex].classList.remove('opacity-100');
                    heroBgs[currentIndex].classList.add('opacity-0');
                    
                    heroBgs[nextIndex].classList.remove('opacity-0');
                    heroBgs[nextIndex].classList.add('opacity-100');

                    currentIndex = nextIndex;
                }, 5000);
            }
		</script>

		<!-- Hero Content -->
		<div class="relative z-20 text-center text-white px-4">
			<h1
				class="text-6xl md:text-8xl font-mincho font-bold mb-6 tracking-wide drop-shadow-lg leading-tight animate-fade-in-up delay-100"
			>
				Voyager Tarot<br />
				<span class="text-gold-light">Creations</span>
			</h1>

			<p
				class="text-lg md:text-2xl font-mincho tracking-widest opacity-90 mb-12 animate-fade-in-up delay-200"
			>
				未来を創造する力を、あなたに。
			</p>

			<div
				class="flex flex-col sm:flex-row justify-center gap-6 animate-fade-in-up delay-300"
			>
				<a
					href="#tarot-draw"
					class="bg-white/10 backdrop-blur-md border border-white/50 text-white px-10 py-4 rounded-full hover:bg-white hover:text-tarot-blue transition-all duration-300 font-bold tracking-wide"
				>
					今日の1枚を引く
				</a>
			</div>
		</div>
	</section>

	<!-- Content Wrapper with white background to slide over fixed BG if we wanted, or just standard flow -->
	<div class="bg-bg-base relative z-10">
		<!-- News Section -->
		<section class="mb-32 pt-24 px-4 relative">
			<div class="max-w-7xl mx-auto">
            <div class="card">
                <div class="card-header">
                    <h2 class="text-white font-mincho font-bold text-2xl md:text-3xl drop-shadow-md">
                        News
                    </h2>
                    <a
                        href="/news"
                        class="group flex items-center gap-3 text-sm text-white/90 hover:text-white transition-colors font-bold tracking-widest"
                    >
                        VIEW ALL
                        <span
                            class="w-8 h-8 rounded-full bg-white/20 border border-white/50 flex items-center justify-center group-hover:bg-white group-hover:text-sakura-vivid transition-all shadow-sm"
                            >&rarr;</span
                        >
                    </a>
                </div>
                <div class="card-body">
                    <div class="grid gap-10 md:grid-cols-3">
                    {
                        newsList.map((news) => (
                            <a
                                href={`/news/${news.id}`}
                                class="block bg-card rounded-2xl shadow-sm border border-gray-100 hover:shadow-xl hover:shadow-pink-100/50 hover:-translate-y-2 transition-all duration-500 group overflow-hidden relative"
                            >
                                <div class="absolute inset-0 bg-gradient-to-br from-white via-transparent to-sakura-light/10 opacity-0 group-hover:opacity-100 transition-opacity duration-500" />
                                <div class="h-56 bg-gray-50 mb-0 overflow-hidden relative">
                                    {news.eyecatch ? (
                                        <img
                                            src={news.eyecatch.url}
                                            alt={news.title}
                                            class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700"
                                        />
                                    ) : (
                                        <div class="w-full h-full flex items-center justify-center bg-gray-50 text-gray-300">
                                            <span class="text-sm tracking-widest">
                                                Voyager
                                            </span>
                                        </div>
                                    )}
                                    <div class="absolute top-4 left-4">
                                        <span class="bg-white/90 backdrop-blur text-xs text-tarot-dark font-bold px-3 py-1 rounded-full shadow-sm">
                                            {news.category[0]?.name}
                                        </span>
                                    </div>
                                </div>
                                <div class="p-8 relative z-10">
                                    <time class="text-xs text-gray-400 font-bold tracking-wider block mb-3">
                                        {formatDate(news.publishedAt)}
                                    </time>
                                    <h3 class="font-bold text-lg line-clamp-2 text-text-main group-hover:text-tarot-blue transition-colors leading-relaxed mb-4">
                                        {news.title}
                                    </h3>
                                    <div class="flex justify-end">
                                        <span class="text-sakura-vivid text-sm font-bold opacity-0 group-hover:opacity-100 transform translate-x-[-10px] group-hover:translate-x-0 transition-all duration-300">
                                            Read More &rarr;
                                        </span>
                                    </div>
                                </div>
                            </a>
                        ))
                    }
                </div>
            </div>
            </div>
			</div>
		</section>

		<!-- About Section (Who We Are & Mission) -->
		<section class="mb-32 px-4 relative">
			<div class="max-w-7xl mx-auto">
                <div class="card">
                    <div class="card-header">
                        <h2 class="text-white font-mincho font-bold text-2xl md:text-3xl drop-shadow-md">
                            ボイジャータロット<br />クリエイションズについて
                        </h2>
                    </div>
                    <div class="card-body">
                    <div class="flex flex-col md:flex-row items-center gap-12 md:gap-20">
                        <!-- Image Side (Visual Anchor) -->
                        <div class="w-full md:w-1/2">
                            <div
                                class="relative rounded-2xl overflow-hidden shadow-2xl shadow-indigo-100/50 group"
                            >
                                <div
                                    class="absolute inset-0 bg-tarot-blue/10 group-hover:bg-transparent transition-colors duration-500 z-10"
                                >
                                </div>
                                <img
                                    src="/images/top_1.jpg"
                                    alt="Voyager Tarot Session"
                                    class="w-full h-auto transform group-hover:scale-105 transition-transform duration-700"
                                />
                            </div>
                        </div>

                        <!-- Text Side (Content) -->
                        <div class="w-full md:w-1/2 text-left">
                            <span class="text-gold-main font-bold tracking-widest text-sm mb-4 block">WHO WE ARE</span>

                            <div
                                class="space-y-6 text-gray-600 leading-loose font-mincho"
                            >
                                <p class="text-lg font-bold text-text-main">
                                    認定ティーチャーとして10年以上の経験を持つ<br
                                    />青木咲羅が主宰する団体です。
                                </p>
                                <p>
                                    ボイジャータロットの作者、ジェームズ・ワンレス博士の源流を正統に受け継ぎながら、現代に合わせた新しいアプローチを探求しています。
                                </p>
                                <p>
                                    ただ占うだけでなく、「現実を創造する」ためのツールとして。魅力的で実力あるリーダー、コーチ、ティーチャーの育成を目指して活動しています。
                                </p>
                            </div>

                            <div class="mt-10">
                                <a
                                    href="/profile"
                                    class="inline-flex items-center gap-2 text-gold-main font-bold tracking-widest hover:gap-4 transition-all group"
                                >
                                    READ MORE
                                    <span
                                        class="w-8 h-[1px] bg-gold-main group-hover:w-12 transition-all"
                                    ></span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
			</div>
			</div>

			<!-- Course Section (Scalable Sidebar Layout) -->
			<section class="mb-32 mt-32 px-4 relative">
				<div class="max-w-7xl mx-auto">
                <div class="card">
                    <div class="card-header">
                        <h2 class="text-white font-mincho font-bold text-2xl md:text-3xl drop-shadow-md">
                            講座紹介
                        </h2>
                    </div>
                    <div class="card-body">
                    <div class="grid md:grid-cols-12 gap-12">
                        <!-- Left Sidebar (Title & Tabs) -->
                        <div class="md:col-span-3">
                            <div>
                                <span class="text-gold-main font-bold tracking-widest text-sm mb-4 block">COURSE</span>
                                
                                <!-- Vertical Tabs -->
                                <div class="flex flex-col gap-4">
                                    {courseCategories.map((cat, index) => (
                                        <button
                                            class:list={[
                                                "course-tab text-left px-6 py-4 rounded-xl transition-all duration-300 font-bold tracking-wide flex items-center justify-between group",
                                                index === 0 
                                                    ? "bg-tarot-blue text-white shadow-lg shadow-indigo-200 ring-2 ring-tarot-blue ring-offset-2" 
                                                    : "bg-white text-gray-500 hover:text-tarot-blue hover:bg-indigo-50"
                                            ]}
                                            data-target={`course-content-${cat.id}`}
                                        >
                                            <span class="z-10 relative">{cat.name}</span>
                                            <span class:list={["w-2 h-2 rounded-full transition-all", index === 0 ? "bg-sakura-vivid" : "bg-gray-300 group-hover:bg-tarot-blue"]}></span>
                                        </button>
                                    ))}
                                </div>
                            </div>
                        </div>

                        <!-- Right Content (Steps & Cards) -->
                        <div class="md:col-span-9">
                        {courseCategories.map((cat, index) => (
                            <div 
                                id={`course-content-${cat.id}`} 
                                class:list={["course-content transition-all duration-500", index !== 0 ? "hidden" : ""]}
                            >
                                <!-- Steps Visualization -->
                                <div class="mb-24">
                                    <h3 class="text-center font-bold text-gray-400 text-sm tracking-widest mb-8">- STEP UP FLOW -</h3>
                                    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 text-tarot-blue font-bold font-mincho">
                                        {cat.steps.map((step, i) => (
                                            <div class="relative flex flex-col items-center justify-center">
                                                <div class="bg-white px-6 py-3 rounded-lg border border-indigo-50 shadow-sm flex items-center justify-center gap-3 w-full relative z-10">
                                                    <span class="w-6 h-6 bg-sakura-vivid text-white rounded-full flex items-center justify-center text-xs font-sans shadow-sm shrink-0">
                                                        {step.step}
                                                    </span>
                                                    <span class="whitespace-nowrap">{step.label}</span>
                                                </div>
                                                
                                                {i < cat.steps.length - 1 && (
                                                    <div class="absolute z-20 text-tarot-blue/60
                                                        md:top-1/2 md:left-full md:ml-3 md:-translate-x-1/2 md:-translate-y-1/2 md:bottom-auto md:right-auto md:mt-0
                                                        top-full left-1/2 mt-3 -translate-x-1/2 -translate-y-1/2
                                                    ">
                                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round" class="rotate-90 md:rotate-0">
                                                            <path d="m9 18 6-6-6-6"></path>
                                                        </svg>
                                                    </div>
                                                )}
                                            </div>
                                        ))}
                                    </div>
                                </div>
                                <!-- Course Cards Grid -->
                                <div class="grid md:grid-cols-3 gap-6">
                                    {cat.cards.map((card) => (
                                        <a href={card.url} class="group block h-full">
                                            <div class="overflow-hidden rounded-2xl mb-4 shadow-lg border border-white/50 relative aspect-[4/3]">
                                                <div class="absolute inset-0 bg-tarot-blue/0 group-hover:bg-tarot-blue/10 transition-colors z-10"></div>
                                                <img
                                                    src={card.img}
                                                    alt={card.title}
                                                    class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700"
                                                />
                                            </div>
                                            <h3 class="font-bold text-center text-lg text-tarot-blue group-hover:text-sakura-vivid transition-colors mb-2">
                                                {card.title}
                                            </h3>
                                            <div class="text-center text-sm text-gray-500 flex justify-center items-center gap-1 group-hover:gap-2 transition-all">
                                                詳細はこちら 
                                                <img src="/images/link_icon.svg" alt="" class="w-4 h-4 inline opacity-60 group-hover:opacity-100 transition-opacity" />
                                            </div>
                                        </a>
                                    ))}
                                </div>
                            </div>
                        ))}
                    </div>
                </div>
            </div>
            </div>
			</section>

            <script>
                // Tab Switching Logic
                const tabs = document.querySelectorAll('.course-tab');
                const contents = document.querySelectorAll('.course-content');

                tabs.forEach(tab => {
                    tab.addEventListener('click', () => {
                        const targetId = (tab as HTMLElement).dataset.target;
                        if (!targetId) return;

                        // 1. Reset Tabs
                        tabs.forEach(t => {
                            t.classList.remove('bg-tarot-blue', 'text-white', 'shadow-lg', 'ring-2', 'ring-tarot-blue', 'ring-offset-2');
                            t.classList.add('bg-white', 'text-gray-500');
                             // reset marker
                             const marker = t.querySelector('span:last-child');
                             if(marker) {
                                 marker.classList.remove('bg-sakura-vivid');
                                 marker.classList.add('bg-gray-300');
                             }
                        });

                        // 2. Active Tab
                        tab.classList.remove('bg-white', 'text-gray-500');
                        tab.classList.add('bg-tarot-blue', 'text-white', 'shadow-lg', 'ring-2', 'ring-tarot-blue', 'ring-offset-2');
                         const activeMarker = tab.querySelector('span:last-child');
                             if(activeMarker) {
                                 activeMarker.classList.remove('bg-gray-300');
                                 activeMarker.classList.add('bg-sakura-vivid');
                             }

                        // 3. Switch Content
                        contents.forEach(content => {
                            content.classList.add('hidden');
                            content.classList.remove('animate-fade-in-up');
                        });
                        
                        const targetContent = document.getElementById(targetId);
                        if (targetContent) {
                            targetContent.classList.remove('hidden');
                             targetContent.classList.add('animate-fade-in-up');
                        }
                    });
                });
            </script>

			<!-- Mission Section (Zigzag: Text Left, Image Right) -->
			<section class="mb-32 px-4 relative">
				<div class="max-w-7xl mx-auto">
                    <div class="card">
                        <div class="card-header">
                            <h2 class="text-white font-mincho font-bold text-2xl md:text-3xl drop-shadow-md">
                                ボイジャータロット<br />クリエイションズの使命
                            </h2>
                        </div>
                        <div class="card-body">
                        <div class="flex flex-col md:flex-row items-center gap-12 md:gap-20">
                            <!-- Text Side (Left) -->
                            <div class="w-full md:w-1/2 text-left">
                                <span class="text-gold-main font-bold tracking-widest text-sm mb-4 block">OUR MISSION</span>
                                <h3 class="text-xl md:text-2xl font-mincho text-tarot-blue/80 font-bold mb-6">
                                    未来を創造する力を、あなたに。
                                </h3>
                                
                                <div class="space-y-6 text-gray-600 leading-loose font-mincho text-lg">
                                    <p>
                                        ボイジャータロットを通じて、皆さまの成長と可能性を広げること。
                                    </p>
                                    <p>
                                        創造性・成長・実現化をテーマに、魅力的、かつ実力あるボイジャータロットリーダー、コーチ、ティーチャーの育成に取り組んでまいります。
                                    </p>
                                </div>
                            </div>

                            <!-- Image Side (Right) -->
                            <div class="w-full md:w-1/2">
                                <div class="relative">
                                    <img
                                        src="/images/top_3_bottom_photos_item-1.jpg"
                                        alt="Mission Photo"
                                        class="rounded-2xl shadow-2xl shadow-indigo-100/50 w-full h-auto hover:scale-[1.02] transition-transform duration-500"
                                    />
                                    <!-- Decorative element overlay if needed, similar to About section -->
                                    <div class="absolute -z-10 top-6 -right-6 w-full h-full bg-gold-light/20 rounded-2xl"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                </div>
				</div>
			</section>

			<!-- About Card Section (Zigzag: Image Left, Text Right) -->
			<section class="mb-32 px-4 relative">
				<div class="max-w-7xl mx-auto">
                    <div class="card">
                        <div class="card-header">
                            <h2 class="text-white font-mincho font-bold text-2xl md:text-3xl drop-shadow-md">
                                Voyager Tarot
                            </h2>
                        </div>
                        <div class="card-body">
                        <div class="flex flex-col md:flex-row items-center gap-12 md:gap-20">
                            <!-- Image Side (Left) -->
                            <div class="w-full md:w-1/2">
                                <div class="h-[500px] bg-gray-100 rounded-[2rem] overflow-hidden relative shadow-2xl shadow-pink-100/50 group">
                                    <!-- Image placeholder with glass overlay -->
                                    <div class="absolute inset-0 flex items-center justify-center text-gray-400 font-mincho tracking-widest z-0">
                                        <span class="z-10 relative">Voyager Image</span>
                                        <div class="absolute inset-0 bg-gradient-to-tr from-indigo-100/40 to-sakura-light/40 mix-blend-multiply"></div>
                                    </div>
                                    
                                    <!-- Glass Effect Overlay -->
                                    <div class="absolute inset-0 bg-white/10 backdrop-blur-[2px] opacity-0 group-hover:opacity-100 transition-opacity duration-700"></div>
                                </div>
                            </div>

                            <!-- Text Side (Right) -->
                            <div class="w-full md:w-1/2 text-left">
                                <span class="text-gold-main font-bold tracking-widest text-sm mb-4 block">ABOUT CARD</span>
                                <h3 class="text-xl font-bold text-gray-700 mb-6 font-mincho">
                                    「自分の人生を創造するためのツール」
                                </h3>
                                <p class="leading-loose text-gray-600 mb-10 font-mincho">
                                    従来の「占い」という枠を超え、現代の心理学や宇宙論を融合。<br />
                                    78枚のカードには美しいコラージュが描かれ、スピリチュアルなエネルギーと現実的なメッセージが詰まっています。
                                </p>

                                <div class="space-y-8 font-mincho">
                                    <div class="flex gap-5 items-start group">
                                        <span class="flex-shrink-0 w-12 h-12 rounded-full bg-blue-50 text-tarot-blue flex items-center justify-center font-bold text-xl group-hover:bg-tarot-blue group-hover:text-white transition-colors shadow-sm">01</span>
                                        <div>
                                            <h4 class="font-bold text-tarot-blue text-lg mb-2">現実創造のサポート</h4>
                                            <p class="text-sm text-gray-600 leading-relaxed">
                                                カードのメッセージを通じて行動を促し、目標達成へと導きます。
                                            </p>
                                        </div>
                                    </div>
                                    <div class="flex gap-5 items-start group">
                                        <span class="flex-shrink-0 w-12 h-12 rounded-full bg-pink-50 text-sakura-vivid flex items-center justify-center font-bold text-xl group-hover:bg-sakura-vivid group-hover:text-white transition-colors shadow-sm">02</span>
                                        <div>
                                            <h4 class="font-bold text-tarot-blue text-lg mb-2">コーチングに最適なツール</h4>
                                            <p class="text-sm text-gray-600 leading-relaxed">
                                                スピリチュアルな視点と現実的なアプローチが融合しており、自己発見や成長を強力にサポートします。
                                            </p>
                                        </div>
                                    </div>
                                    <div class="flex gap-5 items-start group">
                                        <span class="flex-shrink-0 w-12 h-12 rounded-full bg-yellow-50 text-gold-main flex items-center justify-center font-bold text-xl group-hover:bg-gold-main group-hover:text-white transition-colors shadow-sm">03</span>
                                        <div>
                                            <h4 class="font-bold text-tarot-blue text-lg mb-2">直感を引き出すデザイン</h4>
                                            <p class="text-sm text-gray-600 leading-relaxed">
                                                美しいビジュアルが潜在意識を刺激し、新しい気づきをもたらします。
                                            </p>
                                        </div>
                                    </div>
                                </div>

                                <div class="mt-12">
                                    <a href="/about" class="inline-flex items-center gap-2 text-gold-main font-bold tracking-widest hover:gap-4 transition-all group">
                                        READ MORE
                                        <span class="w-8 h-[1px] bg-gold-main group-hover:w-12 transition-all"></span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                </div>
				</div>
			</section>

	<!-- Change Section -->
	<!-- Change Section (Zigzag: Text Left, Image Right) -->
	<!-- Change Section (Zigzag: Text Left, Image Right) -->
	<section class="mb-32 px-4 relative">
		<div class="max-w-7xl mx-auto">
