---
import Layout from "../layouts/Layout.astro";
import TarotDraw from "../components/react/TarotDraw.tsx";
import { getNews } from "../library/microcms";
import { format } from "date-fns";

const response = await getNews({
	limit: 3,
	fields: ["id", "title", "publishedAt", "category", "eyecatch"],
});
const { contents: newsList } = response;

function formatDate(dateString: string) {
	return format(new Date(dateString), "yyyy.MM.dd");
}
// const newsList: any[] = [];
---

<Layout title="Home">
	<!-- Hero Section -->
	<section
		class="mb-24 text-center py-28 relative rounded-[3rem] overflow-hidden"
	>
		<!-- Glass Background -->
		<div
			class="absolute inset-0 bg-white/30 backdrop-blur-xl border border-white/60 shadow-glass rounded-[3rem] z-0"
		>
		</div>

		<div class="relative z-10">
			<span
				class="inline-block py-1 px-3 rounded-full bg-white/80 border border-sakura-vivid/30 text-sakura-vivid text-sm font-bold tracking-widest mb-6 shadow-sm"
			>
				VOYAGER TAROT CREATIONS
			</span>

			<h1
				class="text-5xl md:text-7xl font-mincho font-bold text-transparent bg-clip-text bg-gradient-to-r from-tarot-dark via-purple-800 to-sakura-vivid mb-6 leading-tight py-2 drop-shadow-sm"
			>
				Voyager Tarot<br /><span
					class="text-4xl md:text-6xl bg-gradient-to-r from-gold-main to-orange-300 bg-clip-text text-transparent"
					>Creations</span
				>
			</h1>
			<p
				class="text-lg md:text-xl text-gray-600 mb-12 font-mincho tracking-wider bg-white/40 inline-block px-6 py-2 rounded-full backdrop-blur-sm"
			>
				あなたの人生を創造する、<br class="md:hidden" />魔法のカード。
			</p>
			<div class="flex flex-col sm:flex-row justify-center gap-6 px-4">
				<a
					href="#tarot-draw"
					class="bg-gradient-to-r from-sakura-vivid to-pink-500 text-white px-10 py-4 rounded-full shadow-lg shadow-pink-300/50 hover:shadow-xl hover:shadow-pink-300/70 hover:-translate-y-1 transition-all duration-300 font-bold tracking-wide text-lg"
				>
					今日の1枚を引く
				</a>
				<a
					href="/course"
					class="bg-white/90 backdrop-blur text-tarot-blue border border-indigo-100 px-10 py-4 rounded-full shadow-md hover:bg-white hover:text-sakura-vivid hover:border-sakura-vivid hover:shadow-lg transition-all duration-300 font-bold tracking-wide text-lg"
				>
					講座を見る
				</a>
			</div>
		</div>
	</section>

	<!-- News Section -->
	<section class="mb-24">
		<div class="flex items-center justify-between mb-10 px-4">
			<h2
				class="text-3xl font-mincho text-tarot-blue flex items-center gap-4"
			>
				<span
					class="w-12 h-1 bg-gradient-to-r from-sakura-vivid to-transparent rounded-full"
				></span>
				News
			</h2>
			<a
				href="/news"
				class="group flex items-center gap-2 text-sm text-text-muted hover:text-sakura-vivid transition-colors font-bold tracking-wider"
			>
				VIEW ALL
				<span
					class="w-6 h-6 rounded-full bg-gray-100 flex items-center justify-center group-hover:bg-sakura-vivid group-hover:text-white transition-all"
					>&rarr;</span
				>
			</a>
		</div>
		<div class="grid gap-8 md:grid-cols-3">
			{
				newsList.map((news) => (
					<a
						href={`/news/${news.id}`}
						class="block bg-card rounded-2xl shadow-crystal border border-white/50 hover:shadow-lg hover:shadow-pink-100 hover:-translate-y-2 transition-all duration-500 group overflow-hidden relative"
					>
						<div class="absolute inset-0 bg-gradient-to-br from-white via-transparent to-sakura-light/10 opacity-0 group-hover:opacity-100 transition-opacity duration-500" />
						<div class="h-48 bg-gray-100 mb-0 overflow-hidden relative">
							{news.eyecatch ? (
								<img
									src={news.eyecatch.url}
									alt={news.title}
									class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700"
								/>
							) : (
								<div class="w-full h-full flex items-center justify-center bg-gray-50 text-gray-300">
									<span class="text-sm tracking-widest">
										Voyager
									</span>
								</div>
							)}
							<div class="absolute top-4 left-4">
								<span class="bg-white/90 backdrop-blur text-xs text-tarot-dark font-bold px-3 py-1 rounded-full shadow-sm">
									{news.category[0]?.name}
								</span>
							</div>
						</div>
						<div class="p-6 relative z-10">
							<time class="text-xs text-gray-400 font-bold tracking-wider block mb-2">
								{formatDate(news.publishedAt)}
							</time>
							<h3 class="font-bold text-base line-clamp-2 text-text-main group-hover:text-tarot-blue transition-colors leading-relaxed">
								{news.title}
							</h3>
							<div class="mt-4 flex justify-end">
								<span class="text-sakura-vivid text-sm font-bold opacity-0 group-hover:opacity-100 transform translate-x-[-10px] group-hover:translate-x-0 transition-all duration-300">
									Read More &rarr;
								</span>
							</div>
						</div>
					</a>
				))
			}
		</div>
	</section>

	<!-- About Section (Who We Are & Mission) -->
	<section class="mb-32 px-4 relative">
		<div class="max-w-4xl mx-auto text-center mb-20">
			<span
				class="text-gold-main font-bold tracking-widest text-sm mb-2 block"
				>OUR IDENTITY</span
			>
			<h2 class="text-4xl font-mincho text-tarot-blue mb-8">
				WHO WE ARE
			</h2>
			<h3 class="text-xl font-bold mb-6 text-text-main">
				ボイジャータロットクリエイションズについて
			</h3>
			<p class="leading-[2.5] text-gray-600 mb-10 font-mincho">
				認定ティーチャーとして10年以上の経験を持つ青木咲羅が、<br
					class="hidden md:inline"
				/>
				ボイジャータロットの作者、ジェームズ・ワンレスの源流を受け継ぎ、<br
					class="hidden md:inline"
				/>
				魅力的で実力あるリーダー、コーチ、ティーチャーの育成を目指して新たに設立した団体です。
			</p>

			<div
				class="inline-block p-[2px] rounded-2xl bg-gradient-to-r from-gold-light to-white shadow-sm"
			>
				<div
					class="bg-white/80 backdrop-blur px-12 py-10 rounded-2xl border border-white"
				>
					<h3
						class="text-2xl font-bold mb-6 text-tarot-blue flex justify-center items-center gap-3"
					>
						<span class="text-2xl">✨</span> OUR MISSION
					</h3>
					<p class="leading-[2.2] text-gray-700">
						ボイジャータロットを通じて、皆さまの成長と可能性を広げること。<br
							class="hidden md:inline"
						/>
						創造性・成長・実現化をテーマに、<br
							class="hidden md:inline"
						/>
						魅力的、かつ実力あるボイジャータロットリーダー、コーチ、ティーチャーの育成に取り組んでまいります。
					</p>
				</div>
			</div>
		</div>

		<div
			class="grid md:grid-cols-2 gap-16 items-center bg-gradient-to-br from-white/90 to-white/40 p-10 md:p-16 rounded-[3rem] shadow-glass border border-white"
		>
			<div class="order-2 md:order-1">
				<span
					class="text-sakura-vivid font-bold tracking-widest text-sm mb-2 block"
					>ABOUT CARD</span
				>
				<h2 class="text-3xl font-mincho text-tarot-blue mb-6">
					Voyager Tarot
				</h2>
				<h3 class="font-bold text-gray-700 mb-6 text-lg">
					「自分の人生を創造するためのツール」
				</h3>
				<p class="leading-loose text-gray-600 mb-10">
					従来の「占い」という枠を超え、現代の心理学や宇宙論を融合。<br
					/>
					78枚のカードには美しいコラージュが描かれ、スピリチュアルなエネルギーと現実的なメッセージが詰まっています。
				</p>

				<div class="space-y-6">
					<div class="flex gap-5 items-start group">
						<span
							class="flex-shrink-0 w-10 h-10 rounded-full bg-blue-50 text-tarot-blue flex items-center justify-center font-bold text-lg group-hover:bg-tarot-blue group-hover:text-white transition-colors"
							>01</span
						>
						<div>
							<h4 class="font-bold text-gray-800 text-lg mb-1">
								現実創造のサポート
							</h4>
							<p class="text-sm text-gray-600">
								カードのメッセージを通じて行動を促し、目標達成へと導きます。
							</p>
						</div>
					</div>
					<div class="flex gap-5 items-start group">
						<span
							class="flex-shrink-0 w-10 h-10 rounded-full bg-pink-50 text-sakura-vivid flex items-center justify-center font-bold text-lg group-hover:bg-sakura-vivid group-hover:text-white transition-colors"
							>02</span
						>
						<div>
							<h4 class="font-bold text-gray-800 text-lg mb-1">
								コーチングに最適なツール
							</h4>
							<p class="text-sm text-gray-600">
								スピリチュアルな視点と現実的なアプローチが融合しており、自己発見や成長を強力にサポートします。
							</p>
						</div>
					</div>
					<div class="flex gap-5 items-start group">
						<span
							class="flex-shrink-0 w-10 h-10 rounded-full bg-yellow-50 text-gold-main flex items-center justify-center font-bold text-lg group-hover:bg-gold-main group-hover:text-white transition-colors"
							>03</span
						>
						<div>
							<h4 class="font-bold text-gray-800 text-lg mb-1">
								直感を引き出すデザイン
							</h4>
							<p class="text-sm text-gray-600">
								美しいビジュアルが潜在意識を刺激し、新しい気づきをもたらします。
							</p>
						</div>
					</div>
				</div>

				<div class="mt-12">
					<a
						href="/about"
						class="inline-flex items-center gap-2 text-sakura-vivid font-bold hover:gap-4 transition-all"
						>もっと詳しく見る <span class="text-xl">&rarr;</span></a
					>
				</div>
			</div>
			<div
				class="order-1 md:order-2 h-[500px] bg-gray-100 rounded-[2rem] overflow-hidden relative shadow-lg shadow-pink-100/50"
			>
				<!-- Image placeholder with glass overlay -->
				<div
					class="absolute inset-0 bg-gradient-to-br from-tarot-blue/5 to-sakura-vivid/5 flex items-center justify-center text-gray-400"
				>
					<span class="text-sm tracking-widest">Voyager Image</span>
				</div>
			</div>
		</div>
	</section>

	<!-- Change Section -->
	<section class="mb-32 px-4">
		<h2 class="text-3xl font-mincho text-center text-tarot-blue mb-16">
			ボイジャータロットがもたらす変化
		</h2>
		<div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-8">
			<!-- Card 1 -->
			<div
				class="bg-white/70 backdrop-blur p-8 rounded-3xl shadow-glass border border-white hover:shadow-crystal hover:-translate-y-2 transition-all duration-300 relative overflow-hidden group"
			>
				<div
					class="absolute -right-4 -top-4 w-20 h-20 bg-sakura-light/30 rounded-full blur-xl group-hover:scale-150 transition-transform duration-500"
				>
				</div>
				<h3 class="font-bold text-xl mb-4 text-gray-800 relative z-10">
					内面のクリアリング
				</h3>
				<p class="text-sm text-gray-600 leading-loose relative z-10">
					自分の本音を知り、迷いや不安を解消します。
				</p>
			</div>
			<!-- Card 2 -->
			<div
				class="bg-white/70 backdrop-blur p-8 rounded-3xl shadow-glass border border-white hover:shadow-crystal hover:-translate-y-2 transition-all duration-300 relative overflow-hidden group"
			>
				<div
					class="absolute -right-4 -top-4 w-20 h-20 bg-blue-100/40 rounded-full blur-xl group-hover:scale-150 transition-transform duration-500"
				>
				</div>
				<h3 class="font-bold text-xl mb-4 text-gray-800 relative z-10">
					具体的な行動へ
				</h3>
				<p class="text-sm text-gray-600 leading-loose relative z-10">
					次の一歩が明確になり、行動するモチベーションが高まります。
				</p>
			</div>
			<!-- Card 3 -->
			<div
				class="bg-white/70 backdrop-blur p-8 rounded-3xl shadow-glass border border-white hover:shadow-crystal hover:-translate-y-2 transition-all duration-300 relative overflow-hidden group"
			>
				<div
					class="absolute -right-4 -top-4 w-20 h-20 bg-sakura-light/30 rounded-full blur-xl group-hover:scale-150 transition-transform duration-500"
				>
				</div>
				<h3 class="font-bold text-xl mb-4 text-gray-800 relative z-10">
					意識の拡大
				</h3>
				<p class="text-sm text-gray-600 leading-loose relative z-10">
					直感を刺激され、新しい視点に気づけるようになります。
				</p>
			</div>
			<!-- Card 4 -->
			<div
				class="bg-white/70 backdrop-blur p-8 rounded-3xl shadow-glass border border-white hover:shadow-crystal hover:-translate-y-2 transition-all duration-300 relative overflow-hidden group"
			>
				<div
					class="absolute -right-4 -top-4 w-20 h-20 bg-blue-100/40 rounded-full blur-xl group-hover:scale-150 transition-transform duration-500"
				>
				</div>
				<h3 class="font-bold text-xl mb-4 text-gray-800 relative z-10">
					現実創造の加速
				</h3>
				<p class="text-sm text-gray-600 leading-loose relative z-10">
					行動が変わることで、目標達成や自己実現がスピーディに進みます。
				</p>
			</div>
		</div>
	</section>

	<!-- Tarot Draw Feature -->
	<section
		id="tarot-draw"
		class="mb-20 py-16 px-4 bg-gradient-to-br from-tarot-blue to-indigo-900 text-white rounded-[3rem] text-center relative overflow-hidden shadow-2xl shadow-indigo-200"
	>
		<div class="relative z-10">
			<h2 class="text-3xl font-mincho mb-8">Today's Voyager</h2>
			<p class="mb-8 opacity-90">
				今のあなたに必要なメッセージを受け取りましょう。
			</p>

			<TarotDraw client:visible />
		</div>
		<!-- Decorative bg elements -->
		<div
			class="absolute top-0 left-0 w-full h-full bg-[radial-gradient(circle_at_center,_var(--tw-gradient-stops))] from-white/10 to-transparent opacity-30"
		>
		</div>
	</section>
</Layout>
